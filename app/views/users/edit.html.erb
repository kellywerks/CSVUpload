<h1>Edit <%= @user.email %></h1>

<%= form_for @user do |f| %>
<%= render('layouts/errors', :object => @user) %>

  <div class="row">
    <div class="large-4 columns">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="row">
    <div class="large-4 columns">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="row">
    <div class="large-4 columns">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <% if current_user.admin %>
    <div class="row">
      <div class="large-4 columns">
        <%= f.label :admin %><br />
        <%= f.select(:admin, options_for_select([['true', true], ['false', false]])) %>
      </div>
    </div>
  <% end %>
  <div><%= f.submit "Edit" %></div>
<% end %>
